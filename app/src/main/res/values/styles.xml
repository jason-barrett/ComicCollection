<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="scrollListItemStyle">@style/ScrollListItemStyle</item>
    </style>

    <!-- A style for the text views that appear in the scrolling selection menus at the
    bottom of the Activity screens.  -->
    <style name="ScrollListItemStyle">
        <item name="android:textColor">@color/colorAlphaSelect</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- A style for the items that appear in lists of titles, issues, etc. -->
    <style name="ListItemStyle">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorItemText</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="TitleItemStyle" parent="ListItemStyle">
    </style>

    <style name="IssueItemStyle" parent="ListItemStyle">
    </style>

    <style name="CopyItemStyle" parent="ListItemStyle">
    </style>



    <!-- A style for the banner on top of the lists of copies. -->
    <style name="CopyBannerStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorItemText</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

</resources>